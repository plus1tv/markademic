{
  "name": "markademic",
  "version": "0.15.0",
  "description": "üè´ A tool for rendering academically flavored markdown.",
  "typings": "dist/src/markademic.d.ts",
  "types": "dist/src/markademic.d.ts",
  "source": "src/markademic.ts",
  "main": "dist/markademic.js",
  "module": "dist/markademic.module.js",
  "unpkg": "dist/markademic.umd.js",
  "exports": "./dist/markademic.modern.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production microbundle ./src/markademic.ts --generateTypes",
    "test": "ava tests/markademic.spec.ts",
    "coverage": "nyc npm test && nyc report --reporter=lcov && codecov",
    "test:watch": "ava --converage --watch",
    "start": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plus1tv/markademic.git"
  },
  "keywords": [
    "markdown",
    "academic",
    "paper",
    "publication",
    "latex",
    "syntax highlighting",
    "citation",
    "bibjson"
  ],
  "author": "Alain Galvan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/plus1tv/markademic/issues"
  },
  "homepage": "https://github.com/plus1tv/markademic#readme",
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ]
  },
  "devDependencies": {
    "@types/katex": "0.11.x",
    "@types/node": "^16.11.0",
    "@types/remarkable": "^1.7.5",
    "ava": "^3.15.x",
    "clean-webpack-plugin": "^4.0.x",
    "codecov": "^3.8.x",
    "coveralls": "^3.1.x",
    "cross-env": "^7.0.3",
    "nyc": "^15.1.x",
    "ts-loader": "^9.2.x",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.x",
    "webpack": "^5.58.x"
  },
  "dependencies": {
    "highlight.js": "^11.2.0",
    "katex": "^0.13.x",
    "md5": "^2.3.0",
    "microbundle": "^0.14.1",
    "remarkable": "^2.0.1"
  }
}